<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin - Orders | Homey</title>
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/style.css">
    <style>
        .orders-container {
            margin-top: 20px;
            background-color: #f8f9fa;
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .table th, .table td {
            vertical-align: middle;
        }

        .btn-action {
            margin-right: 10px;
        }

        .breadcrumb {
            background-color: #f8f9fa;
            padding: 10px;
            border-radius: 5px;
            margin-bottom: 20px;
        }

        .btn-disabled {
            pointer-events: none;
            opacity: 0.5;
        }
    </style>
</head>

<body>
    <%- include('../partials/admin/header') %>

    <div class="container">
        <!-- Breadcrumb Navigation -->
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/admin/dashboard">Home</a></li>
                <li class="breadcrumb-item"><a href="/admin/orders">Orders</a></li>
                <li class="breadcrumb-item active" aria-current="page">All Orders</li>
            </ol>
        </nav>

        <div class="container">
            <h3>Order List</h3>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Order ID</th>
                        <th>Username</th>
                        <th>Date</th>
                        <th>Total Amount</th>
                        <th>Payment Method</th>
                        <th>Status</th>
                        <th>Action</th>

                    </tr>
                </thead>
                <tbody>
                    <% orders.forEach(order => { %>
                        <tr>
                            <td><%= order.orderId %></td>
                            <td><%= order.userId.username %></td>
                            <td><%= order.orderDate.toDateString() %></td>
                            <td>â‚¹<%= order.totalAmount.toFixed(2) %></td>
                            <td><%= order.paymentMethod %></td>
                            <td><%= order.status %></td>
                            <td>
                            <a href="/admin/orders/<%= order._id %>" class="btn btn-info btn-sm btn-action">View Details</a>
</td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        
            <!-- Pagination -->
            <nav aria-label="Orders pagination">
                <ul class="pagination">
                    <!-- Previous Page -->
                    <li class="page-item <%= currentPage === 1 ? 'disabled' : '' %>">
                        <a class="page-link" href="?page=<%= currentPage - 1 %>" aria-disabled="<%= currentPage === 1 %>">Previous</a>
                    </li>
        
                    <!-- Page Numbers -->
                    <% for (let i = 1; i <= totalPages; i++) { %>
                        <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                            <a class="page-link" href="?page=<%= i %>"><%= i %></a>
                        </li>
                    <% } %>
        
                    <!-- Next Page -->
                    <li class="page-item <%= currentPage === totalPages ? 'disabled' : '' %>">
                        <a class="page-link" href="?page=<%= currentPage + 1 %>" aria-disabled="<%= currentPage === totalPages %>">Next</a>
                    </li>
                </ul>
            </nav>
        </div>
        
    <%- include('../partials/admin/footer') %>

    <script src="/js/bootstrap.bundle.min.js"></script>
    <script src="/js/custom.js"></script>
</body>

</html>
