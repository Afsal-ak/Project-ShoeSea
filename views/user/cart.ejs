<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Your Shopping Cart</title>
    <link rel="stylesheet" href="/stylesheets/cart.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f8f9fa;
        }

        h2 {
            margin-bottom: 20px;
            color: #333;
            font-size: 24px;
            text-align: center;
        }

        .alert {
            padding: 10px;
            margin-bottom: 20px;
            background-color: #f8d7da;
            color: #721c24;
            border-radius: 4px;
            border: 1px solid #f5c6cb;
            text-align: center;
            font-size: 16px;
        }

        .cart-table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }

        .cart-table thead {
            background-color: #007bff;
            color: #fff;
        }

        .cart-table th, .cart-table td {
            padding: 15px;
            text-align: left;
        }

        .cart-table th {
            font-size: 16px;
        }

        .cart-table td {
            border-bottom: 1px solid #ddd;
        }

        .product-info {
            display: flex;
            align-items: center;
        }

        .product-img {
            max-width: 100px;
            height: auto;
            margin-right: 15px;
            border-radius: 4px;
        }

        .product-name {
            font-weight: bold;
        }

        .quantity-controls {
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .quantity-controls button {
            width: 30px;
            height: 30px;
            margin: 0 5px;
            font-size: 18px;
            cursor: pointer;
            border: none;
            border-radius: 4px;
            background-color: #007bff;
            color: #fff;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .quantity-controls button:disabled {
            background-color: #6c757d;
            cursor: not-allowed;
        }

        .btn-delete {
            color: #dc3545;
            text-decoration: none;
            font-weight: bold;
            font-size: 14px;
        }

        .btn-delete:hover {
            text-decoration: underline;
        }

        .cart-summary {
            margin-top: 20px;
            padding: 15px;
            background-color: #e9ecef;
            border-radius: 8px;
        }

        .cart-summary p {
            margin: 5px 0;
            font-size: 16px;
        }

        .btn-checkout {
            display: inline-block;
            padding: 10px 20px;
            font-size: 16px;
            color: #fff;
            background-color: #28a745;
            text-decoration: none;
            border-radius: 4px;
            text-align: center;
        }

        .btn-checkout:hover {
            background-color: #218838;
        }

        .empty-cart {
            text-align: center;
            margin-top: 50px;
            font-size: 18px;
            color: #6c757d;
        }

        .empty-cart a {
            color: #007bff;
            text-decoration: none;
            font-weight: bold;
        }

        .empty-cart a:hover {
            text-decoration: underline;
        }
    </style>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body>

    <%- include('../partials/user/header') %>

    <div class="container">
        <h2>Your Shopping Cart</h2>

        <% if (message) { %>
            <div class="alert"><%= message %></div>
        <% } %>

        <% if (userCart.cart.length === 0) { %>
            <div class="empty-cart">
                <% if (error_msg) { %>
                    <p class="error"><%= error_msg %></p>
                <% } %>
                <p>Your cart is empty.</p>
                <a href="/products">Continue shopping</a>
            </div>
        <% } else { %>
            <div class="table-responsive">
                <table class="cart-table">
                    <thead>
                        <tr>
                            <th>Product</th>
                            <th>Price</th>
                            <th>Quantity</th>
                            <th>Subtotal</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% userCart.cart.forEach(function(item) { %>
                            <tr data-product-id="<%= item.productId._id %>">
                                <td>
                                    <div class="product-info">
                                        <% if (item.productId) { %>
                                            <img src="<%= item.productId.productImages[0] %>" alt="<%= item.productId.productName %>" class="product-img">
                                            <div class="product-name"><%= item.productId.productName %></div>
                                        <% } else { %>
                                            <p>Product not available</p>
                                        <% } %>
                                    </div>
                                </td>
                                <td>
                                    <% if (item.productId) { %>
                                        ₹<%= item.productId.salePrice.toFixed(2) %>
                                    <% } else { %>
                                        N/A
                                    <% } %>
                                </td>
                                <td>
                                    <% if (item.productId) { %>
                                        <div class="quantity-controls">
                                            <button class="btn-minus">-</button>
                                            <span class="quantity"><%= item.quantity %></span>
                                            <button class="btn-plus">+</button>
                                        </div>
                                    <% } else { %>
                                        N/A
                                    <% } %>
                                </td>
                                <td>
                                    <% if (item.productId) { %>
                                        <span class="subtotal"><%= (item.productId.salePrice * item.quantity).toFixed(2) %></span>
                                    <% } else { %>
                                        N/A
                                    <% } %>
                                </td>
                                <td>
                                    <% if (item.productId) { %>
                                        <a href="/cart/delete?id=<%= item.productId._id %>" class="btn-delete">Remove</a>
                                    <% } else { %>
                                        <span class="text-muted">Unavailable</span>
                                    <% } %>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
            
            <div class="cart-summary">
                <p>Total Items: <span id="total-items"><%= userCart.cart.reduce((total, item) => total + (item.productId ? item.quantity : 0), 0) %></span></p>
                <p>Total Price: ₹<span id="total-price"><%= userCart.cart.reduce((total, item) => {
                    return item.productId ? total + (item.productId.salePrice * item.quantity) : total;
                }, 0).toFixed(2) %></span></p>
                <a href="/checkout" class="btn-checkout">Proceed to Checkout</a>
            </div>
        <% } %>
    </div>

    <%- include('../partials/user/footer') %>

    <script>
        $(document).ready(function() {
            const MAX_QUANTITY = 5;

            function updateCartSummary() {
                let totalItems = 0;
                let totalPrice = 0;

                $('.cart-table tbody tr').each(function() {
                    const $row = $(this);
                    const $quantity = $row.find('.quantity');
                    const quantity = parseInt($quantity.text(), 10);
                    const $price = $row.find('td:eq(1)');
                    const price = parseFloat($price.text().replace('₹', ''));

                    totalItems += quantity;
                    totalPrice += quantity * price;

                    const $subtotal = $row.find('.subtotal');
                    $subtotal.text('₹' + (quantity * price).toFixed(2));
                });

                $('#total-items').text(totalItems);
                $('#total-price').text(totalPrice.toFixed(2));
            }

            $('.btn-plus, .btn-minus').on('click', function() {
                const $row = $(this).closest('tr');
                const productId = $row.data('product-id');
                const $quantity = $row.find('.quantity');
                let quantity = parseInt($quantity.text(), 10);

                if ($(this).hasClass('btn-plus')) {
                    if (quantity >= MAX_QUANTITY) {
                        Swal.fire({
                            icon: 'error',
                            title: 'Limit Reached',
                            text: `You can only select up to ${MAX_QUANTITY} items of this product.`,
                        });
                        return;
                    }
                    quantity += 1;
                } else if ($(this).hasClass('btn-minus') && quantity > 1) {
                    quantity -= 1;
                }

                $quantity.text(quantity);

                $.ajax({
                    url: '/cart/update',
                    method: 'POST',
                    data: { productId: productId, newQuantity: quantity },
                    success: function(response) {
                        updateCartSummary();
                    },
                    error: function(xhr) {
                        let errorMessage = 'Error updating cart. Please try again.';
                        if (xhr.responseJSON) {
                            errorMessage = xhr.responseJSON.message;
                        }
                        Swal.fire({
                            icon: 'error',
                            title: 'Oops...',
                            text: errorMessage,
                        });
                    }
                });
            });

            updateCartSummary();
        });
    </script>
</body>
</html>
