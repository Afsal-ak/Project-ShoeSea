<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Your Shopping Cart</title>
    <link rel="stylesheet" href="/stylesheets/cart.css">
    <style>
        /* cart.css */
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f8f9fa; /* Background color for the whole page */
        }

    

        h2 {
            margin-bottom: 20px;
            color: #333;
            font-size: 24px;
            text-align: center;
        }

        .alert {
            padding: 10px;
            margin-bottom: 20px;
            background-color: #f8d7da;
            color: #721c24;
            border-radius: 4px;
            border: 1px solid #f5c6cb;
            text-align: center;
        }

        .cart-table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }

        .cart-table thead {
            background-color: #007bff;
            color: #fff;
        }

        .cart-table th, .cart-table td {
            padding: 15px;
            text-align: left;
        }

        .cart-table th {
            font-size: 16px;
        }

        .cart-table td {
            border-bottom: 1px solid #ddd;
        }

        .product-info {
            display: flex;
            align-items: center;
        }

        .product-img {
            max-width: 100px;
            height: auto;
            margin-right: 15px;
            border-radius: 4px;
        }

        .product-name {
            font-weight: bold;
        }

        .quantity-form {
            display: flex;
            align-items: center;
        }

        .quantity-form input[type="number"] {
            width: 60px;
            margin-right: 10px;
            padding: 5px;
            text-align: center;
        }

        .btn-delete {
            color: #dc3545;
            text-decoration: none;
            font-weight: bold;
        }

        .btn-delete:hover {
            text-decoration: underline;
        }

        .cart-summary {
            margin-top: 20px;
            padding: 15px;
            background-color: #e9ecef;
            border-radius: 8px;
        }

        .cart-summary p {
            margin: 5px 0;
        }

        .btn-checkout {
            display: inline-block;
            padding: 10px 20px;
            font-size: 16px;
            color: #fff;
            background-color: #28a745;
            text-decoration: none;
            border-radius: 4px;
            text-align: center;
        }

        .btn-checkout:hover {
            background-color: #218838;
        }
    </style>
</head>
<body>

    <%- include('../partials/user/header') %>

    <div class="container">
        
        <h2>Your Shopping Cart</h2>

        <!-- Display any messages from the server -->
        <% if (message) { %>
            <div class="alert"><%= message %></div>
        <% } %>

        <!-- Check if cart is empty -->
        <% if (userCart.cart.length === 0) { %>
            <p>Your cart is empty. <a href="/products">Continue shopping</a></p>
        <% } else { %>
            <table class="cart-table">
                <thead>
                    <tr>
                        <th>Product</th>
                        <th>Price</th>
                        <th>Quantity</th>
                        <th>Subtotal</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% userCart.cart.forEach(function(item, index) { %>
                        <tr>
                            <td>
                                <div class="product-info">
                                    <% if (item.productId) { %>
                                        <img src="<%= item.productId.productImages[0] %>" alt="<%= item.productId.productName %>" class="product-img">
                                        <div class="product-name"><%= item.productId.productName %></div>
                                    <% } else { %>
                                        <p>Product not available</p>
                                    <% } %>
                                </div>
                            </td>
                            <td>
                                <% if (item.productId) { %>
                                    <%= item.productId.salePrice.toFixed(2) %>
                                <% } else { %>
                                    N/A
                                <% } %>
                            </td>
                            <td>
                                <% if (item.productId) { %>
                                    <form action="/cart/update" method="post" class="quantity-form">
                                        <input type="hidden" name="productId" value="<%= item.productId._id %>">
                                        <input type="number" name="newQuantity" value="<%= item.quantity %>" min="1" max="<%= item.productId.quantity %>" title="Maximum quantity is 5">
                                        <button type="submit">Update</button>
                                    </form>
                                <% } else { %>
                                    N/A
                                <% } %>
                            </td>
                            <td>
                                <% if (item.productId) { %>
                                    <%= (item.productId.salePrice * item.quantity).toFixed(2) %>
                                <% } else { %>
                                    N/A
                                <% } %>
                            </td>
                            <td>
                                <% if (item.productId) { %>
                                    <a href="/cart/delete?id=<%= item.productId._id %>" class="btn-delete">Remove</a>
                                <% } else { %>
                                    <span class="text-muted">Unavailable</span>
                                <% } %>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>

            <!-- Cart summary -->
            <div class="cart-summary">
                <p>Total Items: <%= userCart.cart.reduce((total, item) => total + (item.productId ? item.quantity : 0), 0) %></p>
                <p>Total Price: <%= userCart.cart.reduce((total, item) => {
                    return item.productId ? total + (item.productId.salePrice * item.quantity) : total;
                }, 0).toFixed(2) %></p>
                <a href="/checkout" class="btn-checkout">Proceed to Checkout</a>
            </div>
        <% } %>

    </div>

    <%- include('../partials/user/footer') %>
</body>
</html>
