<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login Form</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f0f2f5;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            padding: 100px 0px 100px ;

        }
        .container {
            display: flex;
            background-color: white;
            border-radius: 10px;
            box-shadow: 0 14px 28px rgba(0,0,0,0.25), 0 10px 10px rgba(0,0,0,0.22);
            overflow: hidden;
            width: 900px;
            max-width: 100%;
            min-height: 600px;
        }
        .left-panel {
            flex: 1;
            background: linear-gradient(135deg, #3b5d50 0%, #3b5d50 100%);
            color: white;
            padding: 3rem 2rem;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }
        .left-panel h1 {
            font-size: 2.5rem;
            margin-bottom: 1rem;
        }
        .left-panel p {
            font-size: 1rem;
            line-height: 1.5;
            margin-bottom: 1.5rem;
        }
        .signup-container {
            flex: 1;
            padding: 3rem 2rem;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }
        h2 {
            text-align: center;
            color: #333;
            margin-bottom: 2rem;
            font-weight: 600;
        }
        .input-group {
            margin-bottom: 1.5rem;
        }
        label {
            display: block;
            margin-bottom: 0.5rem;
            color: #555;
            font-weight: 400;
        }
        input {
            width: 100%;
            padding: 0.75rem;
            border: 1px solid #ddd;
            border-radius: 4px;
            font-size: 1rem;
            transition: border-color 0.3s ease;
        }
        input:focus {
            outline: none;
            border-color: #667eea;
        }
        .error {
            color: #e74c3c;
            font-size: 0.85rem;
            margin-top: 0.25rem;
        }
        button {
            width: 100%;
            padding: 0.75rem;
            background: linear-gradient(135deg, #3b5d50 0%, #764ba2 100%);
            color: white;
            border: none;
            border-radius: 4px;
            font-size: 1rem;
            cursor: pointer;
            transition: opacity 0.3s ease;
            font-weight: 600;
        }
        button:hover {
            opacity: 0.9;
        }
        .password-strength {
            margin-top: 0.5rem;
            font-size: 0.85rem;
        }
        .weak { color: #e74c3c; }
        .medium { color: #f39c12; }
        .strong { color: #27ae60; }
        .btn-google {
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: #fff;
            color: #757575;
            border: 1px solid #ddd;
            padding: 0.75rem;
            border-radius: 4px;
            font-size: 1rem;
            cursor: pointer;
            transition: background-color 0.3s ease;
            text-decoration: none;
            margin-top: 1rem;
        }
        .btn-google:hover {
            background-color: #f5f5f5;
        }
        .btn-google img {
            width: 20px;
            height: 20px;
            margin-right: 10px;
        }
        .login-link {
            text-align: center;
            margin-top: 1rem;
            font-size: 0.9rem;
        }
        .login-link a {
            color: #3b5d50;
            text-decoration: none;
            font-weight: 600;
        }
        .login-link a:hover {
            text-decoration: underline;
        }

    /* Media query to hide the left panel on smaller screens */
    @media (max-width: 600px) { /* Changed to 600px */
        .left-panel {
            display: none; /* Hides the left panel on mobile devices */
        }
        .signup-container {
            flex: 1; /* Ensures the signup container takes up the full width */
            padding: 2rem; /* Adjust padding for mobile */
        }
    }
    </style>
</head>
<body>
    <div class="container">
        <div class="left-panel">
            <h1>Welcome to Our Platform</h1>
            <p>Join our community today and experience the best of what we have to offer. Sign up now to get started on your journey with us!</p>
        </div>
        <div class="signup-container">
            <h2>Login</h2>
            
            <% if (messages) { %>
                <p style="text-align: center; color: red;" class="text-danger"><%= messages %></p>
                <% } %>
            <form id="signup-form" action="/login" method="post">
             
                <div class="input-group">
                    <label for="email">Email</label>
                    <input type="email" id="email" name="email" required>
                    <div id="email-error" class="error"></div>
                </div>
              
 
            
                <div class="input-group">
                    <label for="password">Password</label>
                    <input type="password" id="password" name="password" required>
                    <div id="password-strength" class="password-strength"></div>
                    <div id="password-error" class="error"></div>
                </div>
               
                <button type="submit">Login</button>
            </form>
          
            <div class="login-link">
                Don't have an account?  <a href="/signup">Sign-up</a>
            </div>
        </div>
    </div>

    <script>
        const form = document.getElementById('signup-form');
        const email = document.getElementById('email');
     
        form.addEventListener('submit', (e) => {
                if (validateForm()) {
                    form.submit(); // This will submit the form if it is valid
                }

            });

        function validateForm() {
            let isValid = true;

         

            // Email validation
            if (!/\S+@\S+\.\S+/.test(email.value)) {
                showError('email-error', 'Please enter a valid email address');
                isValid = false;
            } else {
                clearError('email-error');
            }

           

           
            return isValid;
        }

        function showError(elementId, message) {
            const errorElement = document.getElementById(elementId);
            errorElement.textContent = message;
        }

       
    </script>
</body>
</html>